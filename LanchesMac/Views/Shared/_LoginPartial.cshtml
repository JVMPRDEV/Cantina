<head>
    <link href="~/css/header.css" rel="stylesheet">
</head>

@using Microsoft.AspNetCore.Identity

@inject SignInManager<IdentityUser> SignInManager

@if (SignInManager.IsSignedIn(User))
{
    <form asp-area="" asp-controller="Account" asp-action="Logout" id="logoutForm"
      method="post" class="navbar-left">
        <ul class="nav navbar-nav navbar-left">
            <button type="submit" class="nav-link btn btn_logout">
                <strong> Logout : @User.Identity.Name &nbsp; </strong>
            </button>
        </ul>
    </form>
}
else
{
    <div class="header-nav-4 row">
        <section class="header-container space-between">
            <div>
                <a class="link-login" asp-controller="Account" asp-action="Login" asp-route-returnUrl="@string.Format("{0}{1}",Context.Request.Path, Context.Request.QueryString)"><span>Login</span></a>
            </div>
            <div>
                <a class="link-login" asp-controller="Account" asp-action="Register"><span>Registro</span></a>
            </div>
        </section>
    </div>

}
